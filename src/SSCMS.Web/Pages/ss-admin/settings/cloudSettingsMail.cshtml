@page
@{ Layout = "_Layout"; }

<el-row :gutter="20">
  <el-col :span="18" :offset="3">
    <div style="height: 25px"></div>
    <el-card class="box-card">
      <template #header>
        <div class="clearfix">
          <span>邮件设置</span>
          <el-button type="primary" v-on:click="btnSubmitClick" size="small" style="float: right; margin-top: -5px;">
            保存设置
          </el-button>
        </div>
      </template>
      <div class="text">
        <el-switch
          v-model="isCloudMail"
          active-text="启用邮件发送"
        ></el-switch>
        <div class="tips" style="margin-top: 10px;">
          邮件发送能够实现表单提交等情景下的邮件发送功能。
          <el-link
            :underline="false"
            href="https://sscms.com/docs/v7/official/sms/"
            target="_blank"
            icon="el-icon-info"
          >
            了解更多
          </el-link>
        </div>

      </div>
    </el-card>
  </el-col>
</el-row>

@section Scripts{
  <script src="/sitefiles/assets/js/admin/settings/cloudSettingsMail.js" type="text/javascript"></script>
}